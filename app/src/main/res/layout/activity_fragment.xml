<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
        <TextView
            android:id="@+id/battingTeamName"
            android:layout_weight="2"
            android:text="TEAM A"
            android:textSize="20sp"
            android:padding="3dp"
            android:textAllCaps="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/battingTeamScore"
        android:layout_weight="1"
        android:text="SCORE"
        android:textSize="20sp"
        android:padding="3dp"
        android:textAlignment="textEnd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center">
            <TextView
                android:layout_weight="1"
                android:id="@+id/currentRunRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CUR RR :"
                android:textSize="18sp"
                android:padding="3dp"/>
            <TextView
                android:layout_weight="1"
                android:id="@+id/requiredRunRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="REQ RR :"
                android:textSize="18sp"
                android:padding="3dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/matchSummeryText"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:text="Match Summery Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:text="Batsman"
                    android:textSize="15sp"
                    android:padding="3dp"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_weight="1"
                    android:text="R"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:padding="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_weight="1"
                    android:text="4"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:padding="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_weight="1"
                    android:text="6"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:padding="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_weight="1"
                    android:text="SR"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:padding="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>